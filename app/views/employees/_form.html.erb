<%= form_with(model: employee, style: "max-width: 600px;") do |form| %>
  <% if employee.errors.any? %>
    <div style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
      <h2 style="margin-top: 0;"><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 1rem;">
    <%= form.label :first_name, style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.text_field :first_name, style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :last_name, style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.text_field :last_name, style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :email, style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.email_field :email, style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :salary, style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.number_field :salary, step: 0.01, style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :department_id, "Department", style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select a department" }, { style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" } %>
  </div>

  <div>
    <%= form.submit style: "background: #28a745; color: white; padding: 0.5rem 1rem; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>
