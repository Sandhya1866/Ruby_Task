<%= form_with(model: department, style: "max-width: 600px;") do |form| %>
  <% if department.errors.any? %>
    <div style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
      <h2 style="margin-top: 0;"><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>
      <ul>
        <% department.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 1rem;">
    <%= form.label :name, style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.text_field :name, style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 1rem;">
    <%= form.label :budget, style: "display: block; margin-bottom: 0.25rem; font-weight: bold;" %>
    <%= form.number_field :budget, step: 0.01, style: "width: 100%; padding: 0.5rem; border: 1px solid #ced4da; border-radius: 4px;" %>
  </div>

  <div>
    <%= form.submit style: "background: #28a745; color: white; padding: 0.5rem 1rem; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>
